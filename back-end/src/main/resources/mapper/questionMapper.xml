<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.api.question.QuestionMapper">
    <select id="getQuestionList" resultMap="ResultMap">
        SELECT * FROM question WHERE inspection_idx = #{idx} AND del_yn = 'N'
        ORDER BY inspection_idx, question_page, question_number;
    </select>

    <resultMap type="com.example.backend.api.question.Question" id="ResultMap">
        <result property="questionIdx" column="question_idx"/>
        <result property="inspectionIdx" column="inspection_idx"/>
        <result property="resultIdx" column="result_idx"/>
        <result property="questionPage" column="question_page"/>
        <collection property="answers" column="question_idx" ofType="Post" select="getAnswerList"/>
    </resultMap>
    <select id="getAnswerList" resultType="com.example.backend.api.answer.Answer" >
		SELECT * FROM answer WHERE question_idx = #{question_idx};
	</select>
    <select id="getPageInfo" resultMap="ResultMap">
        SELECT * from question WHERE question_page = #{page}  AND inspection_idx = #{inspection_idx} AND del_yn = 'N';
    </select>
    <select id="getQuestionInfo">


    </select>

    <update id="deleteQuestion" parameterType="int">
        UPDATE question SET del_yn = 'Y' WHERE question_idx = #{questionIdx}
    </update>
    <update id="updateQuestion">
        UPDATE question
        <set>
            <if test="question.questionText != null and question.questionText != ''"> question_text = #{question.questionText},</if>
            <if test="question.delYn != null and question.delYn != ''"> del_yn = #{question.delYn},</if>
        </set>
        WHERE question_idx = #{questionIdx};
    </update>

</mapper>
