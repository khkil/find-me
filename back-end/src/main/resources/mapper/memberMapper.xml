<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.api.auth.MemberMapper">

    <select id="loadUserByUserName" parameterType="com.example.backend.api.auth.Member" resultType="com.example.backend.api.auth.Member">
        SELECT * FROM member
        WHERE id = #{id}
    </select>

    <select id="findIdByInfo" resultType="com.example.backend.api.auth.Member" parameterType="map">
        SELECT id FROM member WHERE id = #{id} AND email = #{email};
    </select>

    <select id="findIdByPhone" resultType="com.example.backend.api.auth.Member" parameterType="map">
        SELECT id FROM member WHERE id = #{id} AND email = #{email};
    </select>

    <insert id="insertMember" parameterType="com.example.backend.api.auth.Member" useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO member(id, password, role, email) VALUES(#{id}, #{password}, #{role}, #{email});

    </insert>
</mapper>
